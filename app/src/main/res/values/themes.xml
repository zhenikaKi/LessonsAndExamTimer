<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- тема приложения -->
    <style name="Theme.LessonsAndExamTimer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/main_background_color</item>
        <item name="colorPrimaryVariant">@color/main_background_color</item>
<!--        <item name="colorOnPrimary">@color/white</item>-->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- нижнее меню -->
    <style name="BottomNavigationBStyle">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:background">@drawable/bottom_navigation_background</item>
        <item name="android:paddingTop">@dimen/bottom_navigation_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/bottom_navigation_padding_vertical</item>
        <item name="android:paddingStart">@dimen/bottom_navigation_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/bottom_navigation_padding_horizontal</item>
        <item name="android:layout_margin">@dimen/bottom_navigation_layout_margin</item>
        <item name="itemIconTint">@color/bottom_navigation_item_tint</item>
        <item name="itemTextColor">@color/bottom_navigation_item_tint</item>
        <item name="itemIconSize">@dimen/bottom_navigation_icon_size</item>
        <item name="itemBackground">@drawable/bottom_navigation_icon_background</item>
        <item name="itemHorizontalTranslationEnabled">true</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <!-- стиль текста названия экрана -->
    <style name="FragmentNameTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/fragment_name_text_size</item>
    </style>

    <!-- стиль фона цифры таймера -->
    <style name="TimerNumberBackgroundStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/timer_number_padding</item>
        <item name="android:background">@drawable/timer_number_background</item>
        <item name="android:layout_marginStart">@dimen/timer_number_margin</item>
    </style>

    <!-- стиль цифры таймера -->
    <style name="TimerNumberStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:text">@string/time_zero</item>
    </style>

    <!-- стиль заголовка -->
    <style name="TextTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!-- стиль второстепенного текста -->
    <style name="SecondaryTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>
</resources>